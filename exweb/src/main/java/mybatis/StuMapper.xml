<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <!-- namespace는 현재 파일에 정의된 SQL문 집합의 고유한 이름 -->
 <!-- 보통은 SQL문을 실행할 Dao 인터페이스 이름으로 설정 -->

<mapper namespace="com.exam.student.StuDao">
   <!-- com.exam.student.StuVo 객체의 --> 
   <resultMap type="com.exam.student.StuVo" id="studentMap">
       <!-- stuno 속성(변수,필드)에 stu_no 컬럼 값을 저장 -->
       <!-- pk 컬럼은 result 태그 대신 id태그를 사용 -->
       <id property="stuNo" column="stu_no" /> <!-- 컬럼의 값을 객체 변수에 넣어준다. -->
	   <result property="stuName" column="stu_name" />	  
	   <result property="stuScore" column="stu_score" />
 
   </resultMap>

<!--SQL문의 종류와 동일한 이름의 태그를 사용하여 SQL문을 등록
    id는 현재 파일 내에서 현재 SQL문의 고유한 이름
    보통은 SQL문을 실행할 Dao 인터페이스 메소드 이름으로 설정 -->
<!-- SQL문 실행 결과 1개의 레코드를 담을 객체의 클래스명을 resultType 속성에 지정  -->
<!--마이바티스는 기본적으로 resultType객체의 컬럼이름과 동일한 변수(속성,필드)에 컬럼의 값을 저장-->
 <select id="selectStuList"  resultType="StuVo"> <!--StuVo객체에 select문을 담아서 준다. parameterType은 insert의 ? 값에 값을 넣어줌 -->
<!--   <select id="selectStuList"  resultMap="StuMap"> -->
<!--     SELECT mem_id memId, mem_pass memPass, mem_name memName, mem_point memPoint FROM member -->
    SELECT stu_no,stu_name, stu_score FROM student <!-- 낙타표기법으로 바꿔스 그이름의 변수로 놓어준다. -->
  </select>
  <select id="selectStu" parameterType="string"  resultType="StuVo"> 
    SELECT stu_no,stu_name, stu_score FROM student WHERE stu_no= #{stuNo}
  </select>
  
  <insert id="insertStu" parameterType="StuVo">
    INSERT INTO student
	(stu_no, stu_name, stu_score)
     VALUES(#{stuNo}, #{stuName}, #{stuScore})
  </insert>
  
  <update id="updateStu" parameterType="StuVo">
    UPDATE student
	SET  stu_no=#{stuNo}, stu_name=#{stuName}, stu_score=#{stuScore}
    WHERE stu_no=#{stuNo}
  </update>
  
  <delete id="delStu" parameterType="string">   
   <!-- 단일값을 갖는 파라미터를 받은 경우에는 속성이름(변수)이름이 무의미 value써도 된다.  -->
    DELETE FROM student WHERE  stu_no = #{stuNo}
  </delete>
</mapper>